<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relative">

    <Button
        android:id="@+id/signup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login3"
        android:layout_centerVertical="false"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="0"
        android:text="Sign up" />

    <Button
        android:id="@+id/home3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login3"
        android:layout_alignBaseline="@id/signup3"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_weight="0"
        android:text="Home" />

    <EditText
        android:id="@+id/editTextPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/password3"
        android:layout_alignParentRight="true"
        android:layout_weight="0"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password3"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_weight="0"
        android:text="Log in" />

    <TextView
        android:id="@+id/password3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email3"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_weight="0"
        android:text="Password" />

    <EditText
        android:id="@+id/editTextEmail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/email3"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/email3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail:" />
</RelativeLayout>